<?xml version="1.0" encoding="utf-8"?>
<!--
    @author Ziggy Moens
-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="currentQuestion"
            type="com.hogentessentials1.essentials.ui.surveys.SurveyQuestionFragement" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/option5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{currentQuestion.currentQuestion.option5}"
            app:layout_constraintEnd_toEndOf="@+id/ratingBar_question"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/ratingBar_question"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar_question" />

        <TextView
            android:id="@+id/survey_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="16dp"
            android:text="@{currentQuestion.currentQuestion.question}"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/next_question"
            android:textColor="@color/black"
            app:backgroundTint="@color/brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/option0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{currentQuestion.currentQuestion.option0}"
            app:layout_constraintEnd_toEndOf="@+id/ratingBar_question"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ratingBar_question"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar_question" />

        <RatingBar
            android:id="@+id/ratingBar_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:contentDescription="@string/ratingbar_question"
            app:layout_constraintBottom_toTopOf="@+id/next_question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/survey_question" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>