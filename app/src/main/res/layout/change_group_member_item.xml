<?xml version="1.0" encoding="utf-8"?>
    <!--
        @author Jonathan Vanden Eynden
    -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="employee"
            type="com.hogentessentials1.essentials.data.model.Employee" />
        <variable
            name="clickListener"
            type="com.hogentessentials1.essentials.ui.changeGroup.EmployeeDetails.EmployeeListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/surveys_item_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{() -> clickListener.onClick(employee)}"
            android:text="@{employee.firstName}"
            android:textColor="@color/black"
            app:backgroundTint="@color/brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


